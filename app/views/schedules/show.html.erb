<div class="container contenedor">
  <div class="card" style="width: 36rem;">
    <div class="card-header">
      <h5 class="card-title"><%= @schedule.day %>: <%= @schedule.date %></h5>
    </div>
    <div class="card-body">
      <h5 class="card-subtitle mb-2 text-muted"><%= @schedule.event %></h5>
      <p class="card-text"><%= @schedule.note %></p>
      <div class="mt-3 content-btns">
        <%= link_to "Atras", my_schedules_path, class: 'btn btn-primary text-white btns' %>
        <%= link_to 'Crear evento', new_schedule_path, class: "btn btn-success text-white btns" %>
        <%= link_to "Editar", edit_schedule_path(@schedule), class: 'btn btn-warning text-white btns' %>
        <%= link_to "Eliminar", @schedule, method: :delete, class: 'btn btn-danger text-white btns' %>
      </div>
    </div>
  </div>
</div>
