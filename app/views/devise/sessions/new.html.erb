<section class="section-login mt-5">
  <div class="row align-items-stretch">
    <div class="col bg bg-l-w d-none d-lg-block col-md-5 col-lg-5 col-xl-6 rounded">
      <div class="jumbotron pt-5">
        <h1 class="display-4">Hola!</h1>
        <p class="lead">Bienvenido a tu espacio de aprendizaje online</p>
        <hr class="my-4">
        <p >Espero aprendas mucho, y pongas en practica esos conocimientos</p>
      </div>
    </div>
    <div class="col p-5 bg-l rounded-end">
      <div class="text-center">
        <img class="rounded-circle" src="/E.png" width="100px" height="100px" alt="Logo Guide">
        <img class="rounded-circle" src="/logo.jpg" width="100px" height="100px" alt="Logo @mejias_web">
      </div>
      <h2 class="fw-bold text-center pt-5 mb-5">Iniciar Sesión</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group mb-4">
          <%= f.label :email, "Correo" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="form-group mb-4">
          <%= f.label :password, "Clave de acceso" %><br />
          <%= f.password_field :password, autocomplete: "current-password",class: 'form-control' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group mb-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Recuérdame" %>
          </div>
        <% end %>

        <div class="actions d-grid">
          <%= f.submit "Entrar", class: " btn btn-login btn-sm mt-3" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>