<section class="section-login my-4">
  <div class="row align-items-stretch">
    <div class="col bg-registration bg-l d-none d-lg-block col-md-5 col-lg-5 col-xl-6 rounded">
      <div class="jumbotron pt-5">
        <h1 class="display-4 text-dark">Hola!</h1>
        <p class="lead text-dark">Bienvenido esto es espacio de aprendizaje online</p>
        <hr class="my-4 text-dark">
        <p class="text-dark">Espero aproveches la oportunidad que te ofrece esta herramienta para tu aprendizaje</p>
        <p class="text-dark">Usala responsablemente</p>
      </div>
    </div>
    <div class="col p-5 bg-l rounded-end">
      <div class="text-end">
        <img class="rounded-circle" src="/logo.jpg" width="100px" height="100px" alt="Logo Guide">
      </div>
      <h2 class="fw-bold text-center pt-5 mb-5">Registrarse</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group mb-4">
          <%= f.label :nombre %><br />
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group mb-4">
          <%= f.label :correo %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="form-group mb-4">
          <%= f.label :clave %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres m√≠nimos)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="form-group mb-4">
          <%= f.label :confirme_clave %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="actions d-grid">
          <%= f.submit "Registrarse", class: " btn btn-success btn-sm mt-3" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
